@inject NavigationManager NavManager

<MudDrawer ClipMode="@DrawerClipMode.Always" @bind-Open="@DrawerOpen" Elevation="5" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true">
    @if (NavManager.Uri.Contains("admin"))
    {
        <AdminNavMenu />
    }
    else
    {
        <PublicNavMenu />
    } 
</MudDrawer>

@code
{
    [Parameter]
    public bool DrawerOpen { get; set; }
}