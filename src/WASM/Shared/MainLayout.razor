@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider 
    DisableBackdropClick="true"
    CloseOnEscapeKey="true"
    MaxWidth="MaxWidth.ExtraSmall"
    Position="DialogPosition.Center"
/>
<MudSnackbarProvider />

<MudLayout>
    <AppBar />
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-5">
            @Body
        </MudContainer>
    </MudMainContent>
    <MudScrollToTop>
        <MudFab Color="Color.Secondary" Icon="@Icons.Filled.KeyboardArrowUp" />
    </MudScrollToTop>
</MudLayout>
