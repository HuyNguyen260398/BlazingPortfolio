<MudGrid id="services" Class="mt-5">
    <SectionTitle Title="Blazing Services I Developed" />

    @foreach (var item in ServiceList)
    {
        string displayIcon = string.Empty;

        switch (item.DisplayIcon)
        {
            case "Icons.Filled.DesktopWindows":
                displayIcon = Icons.Filled.DesktopWindows;
                break;
            case "Icons.Filled.CloudSync":
                displayIcon = Icons.Filled.CloudSync;
                break;
            case "Icons.Filled.QueryStats":
                displayIcon = Icons.Filled.QueryStats;
                break;
        }

        <MudItem md="4" sm="6" xs="12">
            <MudCard Elevation="5">
                <MudCardContent>
                    <MudIcon Icon="@displayIcon" Color="Color.Primary" Style="font-size: 5rem;" />
                    <MudText Typo="Typo.h5" Class="my-3"><strong>@item.Name</strong></MudText>
                    <MudText Typo="Typo.body1">@item.Description</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    }

</MudGrid>

@code
{
    [Parameter]
    public List<ServiceDto> ServiceList { get; set; }
}