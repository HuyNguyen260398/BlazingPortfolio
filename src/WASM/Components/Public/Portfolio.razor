<MudGrid Class="mt-5">

    @foreach (var item in PortfolioImageList)
    {
        <MudItem lg="3" md="4" sm="6" xs="12">
            <MudTooltip Color="Color.Secondary" Arrow="true" Text="@item.Tooltip">
                <MudImage Elevation="5" Fluid="true" Src="@($"{ApiEndPoints.ServerBaseUrl}/{item.RelativeImagePath}")" />
            </MudTooltip>
        </MudItem>
    }

</MudGrid>

@code
{
    [Parameter]
    public List<ImageDto> PortfolioImageList { get; set; }
}