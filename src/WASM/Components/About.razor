<!-- ABOUT -->
<div class="arlo_tm_about" id="about">
    <div class="container">
        <div class="arlo_tm_main_title">
            <span>Biography</span>
            <h3>About Me</h3>
        </div>
        <div class="about_inner">
            <div class="left">
                <div class="about_image_wrap parallax" data-relative-input="true">
                    <div class="image layer" data-depth="0.1">
                        <img src="Arlo/img/ratios/550x650.jpg" alt="" />
                        <div class="inner" data-img-url="Arlo/img/about/1.jpg"></div>
                    </div>
                    <div class="border layer" data-depth="0.2">
                        <img src="Arlo/img/ratios/550x650.jpg" alt="" />
                        <div class="inner"></div>
                    </div>
                </div>
            </div>
            <div class="right">
                <div class="about_title">
                    <h3>I'm @($"{User.FirstName} {User.LastName}") and <span class="arlo_tm_animation_text_word"></span></h3>
                </div>
                <div class="text">
                    <p>Hi! My name is <span>@($"{User.FirstName} {User.LastName}")</span>. I am a Web Developer, and I'm very passionate and dedicated to my work. With 20 years experience as a professional Web developer, I have acquired the skills and knowledge necessary to make your project a success.</p>
                </div>
                <div class="about_short_contact_wrap">
                    <ul>
                        <li>
                            <img class="svg" src="Arlo/img/svg/gift.svg" alt="" />
                            <span><label>Birthday:</label> @User.DoB.ToString("dd.MM.yyyy")</span>
                        </li>
                        <li>
                            <img class="svg" src="Arlo/img/svg/calendar-4.svg" alt="" />
                            <span><label>Age:</label> @(DateTime.Now.Year - User.DoB.Year)</span>
                        </li>
                        <li>
                            <img class="svg" src="Arlo/img/svg/location-1.svg" alt="" />
                            <span><label>Location:</label> <a class="href_location" href="#">@User.Address</a></span>
                        </li>
                        <li>
                            <img class="svg" src="Arlo/img/svg/game-controller-2.svg" alt="" />
                            <span><label>Interests:</label> @User.Interests</span>
                        </li>
                        <li>
                            <img class="svg" src="Arlo/img/svg/study-5.svg" alt="" />
                            <span><label>Study:</label> <a class="href_location" href="#"> @User.Study</a></span>
                        </li>
                        <li>
                            <img class="svg" src="Arlo/img/svg/degree-1.svg" alt="" />
                            <span><label>Degree:</label> @User.Degree</span>
                        </li>
                        <li>
                            <img class="svg" src="Arlo/img/svg/message-3.svg" alt="" />
                            <span><label>Mail:</label> <a href="mailto:example@gmail.com">@User.Email</a></span>
                        </li>
                        <li>
                            <img class="svg" src="Arlo/img/svg/call-2.svg" alt="" />
                            <span><label>Phone:</label> <a href="tel:+77 022 177 05 05">@User.Phone</a></span>
                        </li>
                    </ul>
                </div>
                <div class="arlo_tm_button">
                    <a href="Arlo/img/resume/resume.jpg" download><span>Download CV</span></a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /ABOUT -->

@code
{
    [Parameter]
    public UserDto User { get; set; }
}