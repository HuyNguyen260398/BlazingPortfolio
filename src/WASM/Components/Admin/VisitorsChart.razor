<MudGrid>
    <MudItem md="6" sm="12" xs="12" Class="mt-5">
        <MudCard Elevation="5">
            <MudChart ChartType="ChartType.Bar" ChartSeries="@Series" @bind-SelectedIndex="Index" XAxisLabels="@XAxisLabels" Width="100%" Height="350px"></MudChart>
            <MudText Typo="Typo.h5" Class="text-center">Number of visitors monthly</MudText>
        </MudCard>
    </MudItem>
    <MudItem md="6" sm="12" xs="12" Class="mt-5">
        <MudCard Elevation="5">
            <MudChart ChartType="ChartType.Donut" LegendPosition="@Position.Bottom" Width="100%" Height="350px" InputData="@data" InputLabels="@labels"></MudChart>
            <MudText Typo="Typo.h5" Class="text-center">Top 5 most views posts</MudText>
        </MudCard>
    </MudItem>
</MudGrid>

@code {
    private int Index = 1; //default value cannot be 0 -> first selectedindex is 0.
    public double[] data = { 25, 77, 28, 5 };
    public string[] labels = { "Post 1", "Post 2", "Post 3", "Post 4" };

    public List<ChartSeries> Series = new List<ChartSeries>()
    {
        new ChartSeries() { Name = "Visitors", Data = new double[] { 40, 20, 25, 27, 46, 60, 48, 80, 15, 70, 54, 99 } }
    };

    public string[] XAxisLabels = { "Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec" };
}