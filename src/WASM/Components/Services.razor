@if (ServiceList != null && ServiceList.Count() > 0)
{
    <!-- SERVICES -->
    <div class="arlo_tm_section" id="services">
        <div class="arlo_tm_services">
            <div class="container">
                <div class="arlo_tm_main_title">
                    <span>Services</span>
                    <h3>Quality Services</h3>
                </div>
                <div class="service_inner">
                    <ul>
                        @foreach (var service in ServiceList)
                        {
                            <li class="wow fadeInLeft" data-wow-duration="1.5s">
                            <div class="inner">
                                <img class="svg" src="@($"{ApiEndPoints.ServerBaseUrl}/{service.SvgPath}")" alt="" />
                                <h3>@service.Name</h3>
                                <p>@service.Description</p>
                            </div>
                        </li>
                        }
                    </ul>
                    <div class="lets_work wow fadeInLeft" data-wow-duration="1.5s">
                        <p>Are you interested in working with me? <a href="#contact"> Let's started now</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /SERVICES -->
}

@code
{
    [Parameter]
    public IEnumerable<ServiceDto> ServiceList { get; set; }
}