pipeline {
    agent {
        node {
            label "test"
        }
    }
    environment {
        dotnet = "C:\\Program Files\\dotnet\\dotnet.exe"
        dockerhub_repo = "huynguyen260398/blazing-portfolio"
        dockerhub_credentials = "DockerHub_Credentials"
        docker_image = ""
    }
    stages {
        stage("Restore") {
            steps {
                bat "dotnet restore"
            }
        }
        stage("Clean") {
            steps {
                bat "dotnet clean"
            }
        }
        stage("Test") {
            steps {
                echo "Test"
            }
        }
        stage("Build") {
            steps {
                bat "dotnet build"
            }
        }
        stage("Build Image") {
            steps {
                script {
                    docker_image = docker.build("test_imge", "-f src/api/Dockerfile .")
                }
            }
        }
        stage("Clean WS") {
            steps {
                cleanWs()
            }
        }
    }
}