pipeline {
    node ('test') {
        environment {
            dotnet = 'C:\\Program Files\\dotnet\\dotnet.exe'
        }
        stages {
            stage('Checkout') {
                steps {
                    git credentialsId: 'HuyNguyen260398', url: 'https://github.com/HuyNguyen260398/BlazingPortfolio.git', branch: 'feature/ci_cd_with_jenkins'
                }
            }
            stage('Restore') {
                steps {
                    bat 'dotnet restore --configfile Nuget.Config'
                }
            }
            stage('Build') {
                steps {
                    bat 'dotnet build --configuration Release'
                }
            }
        }
    }
}