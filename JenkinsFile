pipeline {
    agent {
        node {
            label "test"
        }
    }
    environment {
        dotnet = "C:\\Program Files\\dotnet\\dotnet.exe"
        dockerhub_repo = "huynguyen260398/blazing-portfolio"
        dockerhub_credentials = "DockerHub_Credentials"
        api_image = ""
        wasm_image = ""
    }
    stages {
        stage("Restore") {
            steps {
                bat "dotnet restore"
            }
        }
        stage("Clean") {
            steps {
                bat "dotnet clean"
            }
        }
        stage("Test") {
            steps {
                echo "Test"
            }
        }
        stage("Build") {
            steps {
                bat "dotnet build"
            }
        }
        stage("Build API Image") {
            steps {
                script {
                    api_image = docker.build("api_imge", "-f src/API/Dockerfile .")
                }
            }
        }
        stage("Build WASM Image") {
            steps {
                script {
                    wasm_image = docker.build("wasm_imge", "-f src/WASM/Dockerfile .")
                }
            }
        }
        stage("Clean WS") {
            steps {
                cleanWs()
            }
        }
    }
}